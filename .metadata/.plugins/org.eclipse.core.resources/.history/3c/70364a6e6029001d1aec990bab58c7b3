#include <iostream>

#ifndef LIBRO_H_
#define LIBRO_H_

using namespace std;



class Libro {

	enum Categoria { clasico, policial, novela };

	int codigo;
	string nombre;
	string descripcion;
	string autor;
	Categoria categoria;
	float precio;
	float const IVA = 0.21;
public:
	Libro();
	float getIVA();
	float getPrecioBase();

	virtual ~Libro();
};

#endif /* LIBRO_H_ */
